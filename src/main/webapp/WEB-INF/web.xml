    <servlet>
        <servlet-name>ResetCompleteLogic</servlet-name>
        <servlet-class>logic.ResetComplete</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetCompleteLogic</servlet-name>
