    </servlet>
    <servlet-mapping>
        <servlet-name>ToDo</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>



    <!-- Hier beginnt die Logic -->

    <!-- LoginLogic declaration and mapping -->
