<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ContentServlet</servlet-name>
        <servlet-class>view.servlets.subservlets.Content</servlet-class>
        <init-param>
            <param-name>myInitParam</param-name>
            <param-value>Deployment-Descriptor</param-value>
        </init-param>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet declaration and mapping -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>view.LoginServlet</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShoppingServlet</servlet-name>
        <servlet-class>view.servlets.subservlets.Shopping</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingServlet</servlet-name>
        <url-pattern>/shopping</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FinancialServlet</servlet-name>
        <servlet-class>view.servlets.subservlets.Financial</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FinancialServlet</servlet-name>
        <url-pattern>/financial</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToDoServlet</servlet-name>
        <servlet-class>view.servlets.subservlets.ToDo</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToDoServlet</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
</web-app>